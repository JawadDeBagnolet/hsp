<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="appli.hsp.PageAccueil"
      alignment="TOP_CENTER"
      spacing="30"
      style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #0f0f1e); -fx-padding: 50;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Titre -->
    <Text text="HSP - SystÃ¨me de Gestion"
          style="-fx-font-size: 32px; -fx-fill: #e8e8e8; -fx-font-weight: bold;" />

    <!-- Navigation -->
    <HBox spacing="20" alignment="CENTER" style="-fx-background-color: #2d2d3d; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #404050; -fx-border-width: 1;">
        <Button text="Accueil"
                style="-fx-background-color: #4a4a6a; -fx-text-fill: #e8e8e8; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;" />
        <Button text="Commandes"
                onAction="#handleCommandes"
                style="-fx-background-color: #5a6a4a; -fx-text-fill: #e8e8e8; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;" />
        <Button text="Patients"
                style="-fx-background-color: #4a4a6a; -fx-text-fill: #e8e8e8; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;" />
        <Button text="Ordonnances"
                style="-fx-background-color: #4a4a6a; -fx-text-fill: #e8e8e8; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;" />
    </HBox>

    <!-- Contenu principal -->
    <VBox spacing="25" alignment="CENTER" style="-fx-background-color: #2d2d3d; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: #404050; -fx-border-width: 1;">
        <Text text="Tableau de bord"
              style="-fx-font-size: 24px; -fx-fill: #e8e8e8; -fx-font-weight: bold;" />
        
        <GridPane hgap="20" vgap="20" alignment="CENTER">
            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #3d3d4d; -fx-padding: 20; -fx-background-radius: 8;" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <Text text="Commandes du jour"
                      style="-fx-font-size: 18px; -fx-fill: #e8e8e8; -fx-font-weight: bold;" />
                <Label text="12" style="-fx-font-size: 36px; -fx-fill: #5a6a4a; -fx-font-weight: bold;" />
            </VBox>
            
            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #3d3d4d; -fx-padding: 20; -fx-background-radius: 8;" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <Text text="Patients actifs"
                      style="-fx-font-size: 18px; -fx-fill: #e8e8e8; -fx-font-weight: bold;" />
                <Label text="156" style="-fx-font-size: 36px; -fx-fill: #4a6a5a; -fx-font-weight: bold;" />
            </VBox>
            
            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #3d3d4d; -fx-padding: 20; -fx-background-radius: 8;" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <Text text="Ordonnances en attente"
                      style="-fx-font-size: 18px; -fx-fill: #e8e8e8; -fx-font-weight: bold;" />
                <Label text="8" style="-fx-font-size: 36px; -fx-fill: #6a5a4a; -fx-font-weight: bold;" />
            </VBox>
            
            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #3d3d4d; -fx-padding: 20; -fx-background-radius: 8;" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <Text text="Rendez-vous aujourd'hui"
                      style="-fx-font-size: 18px; -fx-fill: #e8e8e8; -fx-font-weight: bold;" />
                <Label text="24" style="-fx-font-size: 36px; -fx-fill: #5a4a6a; -fx-font-weight: bold;" />
            </VBox>
        </GridPane>
    </VBox>

</VBox>
