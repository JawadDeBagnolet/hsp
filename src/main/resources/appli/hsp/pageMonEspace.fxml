<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="appli.hsp.PageMonEspace" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #3498db);">
    
    <top>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 15;">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Text text="HSP" style="-fx-font-size: 24px; -fx-fill: #3498db; -fx-font-weight: bold;" />
                <Text text="Hôpital de Santé Publique" style="-fx-font-size: 12px; -fx-fill: #ecf0f1;" />
            </VBox>
            <HBox spacing="15" alignment="CENTER">
                <Button text="Accueil" onAction="#versAccueil" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand;" />
                <Button text="Patients" onAction="#versPatients" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand;" />
                <Button text="Commandes" onAction="#versCommandes" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand;" />
                <Button text="Utilisateurs" onAction="#versUtilisateurs" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand;" />
                <Button text="Mon espace" onAction="#versMonEspace" style="-fx-background-color: #3498db; -fx-text-fill: #ffffff; -fx-cursor: hand;" />
                <Button text="Déconnexion" onAction="#deconnexion" style="-fx-background-color: #e74c3c; -fx-text-fill: #ffffff; -fx-cursor: hand;" />
            </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: linear-gradient(to bottom, #2c3e50, #3498db); -fx-border-color: transparent;">
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 60;">
                <Text text="Mon Espace Personnel" style="-fx-font-size: 36px; -fx-fill: #ffffff; -fx-font-weight: bold;" />
                
                <VBox spacing="25" alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-padding: 40; -fx-background-radius: 15; -fx-pref-width: 500;">
                    
                    <Text text="Informations personnelles" style="-fx-font-size: 20px; -fx-fill: #3498db; -fx-font-weight: bold;" />
                    
                    <HBox spacing="20" alignment="CENTER">
                        <VBox spacing="8">
                            <Label text="Nom :" style="-fx-font-size: 14px; -fx-fill: #ffffff; -fx-font-weight: bold;" />
                            <TextField fx:id="nomField" editable="false" style="-fx-pref-width: 200; -fx-pref-height: 35; -fx-background-color: #3d3d4d; -fx-text-fill: #e8e8e8;" />
                        </VBox>
                        
                        <VBox spacing="8">
                            <Label text="Prénom :" style="-fx-font-size: 14px; -fx-fill: #ffffff; -fx-font-weight: bold;" />
                            <TextField fx:id="prenomField" editable="false" style="-fx-pref-width: 200; -fx-pref-height: 35; -fx-background-color: #3d3d4d; -fx-text-fill: #e8e8e8;" />
                        </VBox>
                    </HBox>

                    <Separator style="-fx-background-color: #7f8c8d;" />

                    <Text text="Coordonnées modifiables" style="-fx-font-size: 20px; -fx-fill: #27ae60; -fx-font-weight: bold;" />
                    
                    <VBox spacing="8">
                        <Label text="Email :" style="-fx-font-size: 14px; -fx-fill: #ffffff; -fx-font-weight: bold;" />
                        <TextField fx:id="emailField" promptText="Entrez votre email" style="-fx-pref-width: 350; -fx-pref-height: 35; -fx-background-color: #3d3d4d; -fx-text-fill: #e8e8e8;" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Nouveau mot de passe :" style="-fx-font-size: 14px; -fx-fill: #ffffff; -fx-font-weight: bold;" />
                        <PasswordField fx:id="mdpField" promptText="Laissez vide pour ne pas modifier" style="-fx-pref-width: 350; -fx-pref-height: 35; -fx-background-color: #3d3d4d; -fx-text-fill: #e8e8e8;" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Confirmer le mot de passe :" style="-fx-font-size: 14px; -fx-fill: #ffffff; -fx-font-weight: bold;" />
                        <PasswordField fx:id="confirmMdpField" promptText="Confirmez le nouveau mot de passe" style="-fx-pref-width: 350; -fx-pref-height: 35; -fx-background-color: #3d3d4d; -fx-text-fill: #e8e8e8;" />
                    </VBox>

                    <HBox spacing="20" alignment="CENTER">
                        <Button text="Enregistrer" onAction="#enregistrerModifications" style="-fx-background-color: #27ae60; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 40;" />
                        <Button text="Annuler" onAction="#annulerModifications" style="-fx-background-color: #95a5a6; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;" />
                    </HBox>

                    <Label fx:id="messageLabel" text="" style="-fx-text-fill: #2ecc71; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    
                </VBox>
                
                <!-- Espace supplémentaire pour s'assurer que le défilement fonctionne -->
                <VBox style="-fx-pref-height: 100;">
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
