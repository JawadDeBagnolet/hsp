            <!-- Liste des patients -->
            <ListView fx:id="patientsListView" prefHeight="400" prefWidth="600" 
                      style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 15; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-width: 1; -fx-border-radius: 15;" />
        </VBox>
    </center>
</BorderPane>
